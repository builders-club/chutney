{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": false
  },
  "include": [
    "src",
    "webpack.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}